<!DOCTYPE html>
<html lang="es">
    <%- include('partials/head') %>
<body>
	<%- include('partials/header') %>
	
	<%- include('partials/banner') %>

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Novedades</h2>
			</div>
			<!-- Show the "ultimos" products -->
            <% for (let i = 0; i < 4; i++) { %>
                <div class="col-12 col-sm-6 col-lg-3">
                    <section class="product-box">
                        <a href="/product/<%= lista_telefonos[i].id %>">
                            <figure class="product-box_image">
                                <img src="<%= lista_telefonos[i].foto %>" alt="<%= lista_telefonos[i].marca %> - <%= lista_telefonos[i].modelo %>">
                            </figure>
                            <article class="product-box_data">
                                <h2><%= lista_telefonos[i].marca %> - <%= lista_telefonos[i].modelo %></h2>
                                <p><%= lista_telefonos[i].descripcion %></p>
                                <p>Comentarios: <%= lista_telefonos[i].comentarios_id.length %></p>
                            </article>
                        </a>
                    </section>
                </div>
            <% } %>
		</div>
	</div>
	<!-- /Novedades -->

	<!-- Más comentados -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Más comentados</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for (let i = 0; i < 4; i++) { %>
                <div class="col-12 col-sm-6 col-lg-3">
                    <section class="product-box">
                        <a href="/product/<%= lista_telefonos[i].id %>">
                            <figure class="product-box_image">
                                <img src="<%= lista_telefonos[i].foto %>" alt="<%= lista_telefonos[i].marca %> - <%= lista_telefonos[i].modelo %>">
                            </figure>
                            <article class="product-box_data">
                                <h2><%= lista_telefonos[i].marca %> - <%= lista_telefonos[i].modelo %></h2>
                                <p><%= lista_telefonos[i].descripcion %></p>
                                <p>Comentarios: <%= lista_telefonos[i].comentarios_id.length %></p>
                            </article>
                        </a>
                    </section>
                </div>
            <% } %>
		</div>
	</div>
		
	<!-- /Más comentados -->


	<%- include('partials/footer') %>
</body>	
</html>