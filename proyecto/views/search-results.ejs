<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head') %>


<body>
	<% if (locals.usuario) { %>
        <%- include('partials/headerLogueado') %> 
    <% } else { %> 
        <%- include('partials/header') %> 
	<% } %>

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Resultados de b√∫squeda: <%= resultado %></h2>
			</div>
			<div>

				<% if (telefonos.length == 0) { %>
					<h2>No se encontraron resultados</h2>
				<% } else { %>
					<% for (let i = 0; i < telefonos.length; i++) { %>
						<div style="width: 20vw;">
							<article class="product">
								<a href="/products/detail/<%= telefonos[i].id %>">
									<img src="<%= telefonos[i].imagen %>" alt="<%= telefonos[i].nombre %>">
									<h2 class="product-title"><%= telefonos[i].nombre %> - <a href="/users/profile/<%= telefonos[i].usuario.id %>"><%= telefonos[i].usuario.nombre %></a></h2>
								</a>
							</article>
						</div>
					<% } %>

					<% for (let i = 0; i < telefonos.length; i++) { %>
						<div style="width: 20vw;">
							<article class="product">
								<a href="/product/<%= telefonos[i].id %>">
									<img src="<%= telefonos[i].imagen %>" alt="<%= telefonos[i].nombre %>">
									<h2 class="product-title"><%= telefonos[i].nombre %></h2>
								</a>
							</article>
						</div>
					<% } %>
				<% } %>
			</div>
		</div>
	</div>

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>
</html>
